<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="webjump_todo_task" resource="default" comment="TODO tasks">

        <column xsi:type="int" name="task_id" identity="true" comment="Task ID"/>

        <column xsi:type="varchar" name="label" length="255"
            nullable="false" comment="Task Label" />

        <column xsi:type="varchar" name="status" length="255"
            nullable="false" comment="Status" />

        <column xsi:type="int" name="customer_id" padding="10"
            identity="false" unsigned="true" nullable="true"
            comment="Customer ID" />

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="task_id"/>
        </constraint>

        <constraint xsi:type="foreign"
            referenceId="WEBJUMP_TODO_TASK_CUSTOMER_ID_CUSTOMER_ENTITY_ENTITY_ID"
            table="webjump_todo_task" column="customer_id"
            referenceTable="customer_entity" referenceColumn="entity_id"
            onDelete="CASCADE" />

    </table>
</schema>
